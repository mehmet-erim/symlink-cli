{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@symlink/core": ["dist/core"],
      "@symlink/core/*": ["dist/core/*"],
      "@symlink/common": ["dist/common"],
      "@symlink/common/*": ["dist/common/*"],
      "@symlink/forms": ["dist/forms"],
      "@symlink/forms/*": ["dist/forms/*"]
    }
  }
}
